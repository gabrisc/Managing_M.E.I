<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView36"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/IntermediateDMBlue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCancelAddingNewCashItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="serif"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/switchTypeNewCashItem"
        app:layout_constraintStart_toStartOf="@+id/switchTypeNewCashItem"
        app:layout_constraintTop_toBottomOf="@+id/switchTypeNewCashItem" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextValueForCashFlowItem"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:hint="VALOR DO FLUXO"
        android:textColorHint="@color/Azul_mais_claro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView36">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextValueForCashFlowNameItem"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="NOME"
        android:textColorHint="@color/Azul_mais_claro"
        app:layout_constraintEnd_toEndOf="@+id/editTextValueForCashFlowItem"
        app:layout_constraintStart_toStartOf="@+id/editTextValueForCashFlowItem"
        app:layout_constraintTop_toBottomOf="@+id/editTextValueForCashFlowItem">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>


    <Switch
        android:id="@+id/switchTypeNewCashItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/editTextValueForCashFlowNameItem"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextValueForCashFlowNameItem"
        app:layout_constraintTop_toBottomOf="@+id/editTextValueForCashFlowNameItem" />

</androidx.constraintlayout.widget.ConstraintLayout>