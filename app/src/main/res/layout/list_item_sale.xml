<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro_bold"
        android:gravity="center"
        android:text="Lucro"
        android:textColor="@color/Azul_mais_claro"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewpaymentType"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewpaymentType"
        app:layout_constraintTop_toBottomOf="@+id/textViewpaymentType" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro_bold"
        android:gravity="center"
        android:text="Valor Total"
        android:textColor="@color/Azul_mais_claro"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewLucroListSale"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewLucroListSale"
        app:layout_constraintTop_toBottomOf="@+id/textViewLucroListSale" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="VALOR TOTAL"
        android:textColor="@color/DarkBlue"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="LUCRO"
        android:textColor="@color/DarkBlue"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewpaymentType"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/advent_pro_light"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/Azul_mais_claro"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView15"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textViewClientNameListSale"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="NOME DO CLIENTE"
        android:textColor="@color/Azul_mais_claro"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTotalListSale"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/advent_pro_light"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/Azul_mais_claro"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewClientNameListSale"
        app:layout_constraintStart_toEndOf="@+id/imageView14"
        app:layout_constraintTop_toBottomOf="@+id/textViewClientNameListSale" />

    <TextView
        android:id="@+id/textViewLucroListSale"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/advent_pro_light"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/Azul_mais_claro"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewpaymentType"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro_bold"
        android:gravity="center"
        android:text="Forma de pagamento"
        android:textColor="@color/Azul_mais_claro"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewTotalListSale"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewTotalListSale"
        app:layout_constraintTop_toBottomOf="@+id/textViewTotalListSale" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:tint="@color/DarkBlue"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLucroListSale"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/textViewLucroListSale"
        app:srcCompat="@drawable/ic_baseline_payment_24" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:tint="@color/DarkBlue"
        app:layout_constraintBottom_toBottomOf="@+id/textViewpaymentType"
        app:layout_constraintStart_toStartOf="@+id/imageView14"
        app:layout_constraintTop_toTopOf="@+id/textViewpaymentType"
        app:srcCompat="@drawable/ic_baseline_attach_money_24" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:tint="@color/DarkBlue"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTotalListSale"
        app:layout_constraintStart_toStartOf="@+id/textViewClientNameListSale"
        app:layout_constraintTop_toTopOf="@+id/textViewTotalListSale"
        app:srcCompat="@drawable/ic_baseline_payments_24" />

    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/Azul_mais_claro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />


</androidx.constraintlayout.widget.ConstraintLayout>