<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.company_health.ui.cashFlow.CashFlowFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCashFlowItem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView45">

    </androidx.recyclerview.widget.RecyclerView>

    <Spinner
        android:id="@+id/spinnerDateOfFlow"
        android:layout_width="411dp"
        android:layout_height="43dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="53dp" />

    <TextView
        android:id="@+id/textViewSaldoDoDia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/advent_pro_light"
        android:gravity="center"
        android:text="00,00"
        android:textColor="@color/gray"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="126dp" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/advent_pro_medium"
        android:gravity="center"
        android:text="Fluxo de Caixa"
        android:textColor="@color/Azul_mais_claro"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro_bold"
        android:text="TextView"
        android:textColor="@color/Azul_mais_claro"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewSaldoDoDia"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewSaldoDoDia"
        app:layout_constraintTop_toBottomOf="@+id/textViewSaldoDoDia" />

    <TextView
        android:id="@+id/textViewTotalDeRecebimentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/advent_pro_light"
        android:text="TextView"
        android:textColor="@color/gray"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView45"
        app:layout_constraintEnd_toEndOf="@+id/textViewSaldoDoDia"
        app:layout_constraintTop_toBottomOf="@+id/textViewSaldoDoDia" />

    <TextView
        android:id="@+id/textViewTotalDePagamentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/advent_pro_light"
        android:text="TextView"
        android:textColor="@color/gray"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView45"
        app:layout_constraintStart_toStartOf="@+id/textViewSaldoDoDia"
        app:layout_constraintTop_toBottomOf="@+id/textViewSaldoDoDia" />

    <ImageButton
        android:id="@+id/imageButtonAddNewFlowOfCash"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rouded_edit_text"
        android:elevation="5dp"
        android:src="@drawable/ic_baseline_add_24"
        android:tint="@color/azul_muito_escuro"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewCashFlowItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro_bold"
        android:text="SALDO DO DIA "
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewSaldoDoDia"
        app:layout_constraintEnd_toEndOf="@+id/textViewSaldoDoDia"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewSaldoDoDia" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro_bold"
        android:text="TOTAL PAGAMENTOS"
        android:textColor="@color/gray"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewTotalDePagamentos"
        app:layout_constraintEnd_toEndOf="@+id/textViewTotalDePagamentos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewTotalDePagamentos" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro_bold"
        android:text="TOTAL RECEBIMENTOS"
        android:textColor="@color/gray"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewTotalDeRecebimentos"
        app:layout_constraintEnd_toEndOf="@+id/textViewTotalDeRecebimentos"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewTotalDeRecebimentos" />

    <View
        android:id="@+id/divider12"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView45"
        app:layout_constraintEnd_toStartOf="@+id/textViewTotalDeRecebimentos"
        app:layout_constraintStart_toEndOf="@+id/textViewTotalDePagamentos"
        app:layout_constraintTop_toBottomOf="@+id/textViewSaldoDoDia" />

    <View
        android:id="@+id/divider13"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@color/Azul_mais_claro"
        app:layout_constraintEnd_toStartOf="@+id/divider12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider12" />

    <View
        android:id="@+id/divider14"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@color/Azul_mais_claro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider12"
        app:layout_constraintTop_toBottomOf="@+id/divider12" />

</androidx.constraintlayout.widget.ConstraintLayout>