<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp">


    <TextView
        android:id="@+id/nameItem2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/advent_pro_medium"
        android:gravity="center"
        android:text="nome do item"
        android:textColor="@color/Azul_mais_claro"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:tint="@color/DarkBlue"
        app:layout_constraintBottom_toBottomOf="@+id/TextViewValueOfEconomicOperation"
        app:layout_constraintStart_toStartOf="@+id/divider5"
        app:layout_constraintTop_toTopOf="@+id/TextViewValueOfEconomicOperation"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_attach_money_24" />

    <TextView
        android:id="@+id/TextViewValueOfEconomicOperation"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:fontFamily="@font/advent_pro_light"
        android:gravity="center"
        android:text="150 R$"
        android:textColor="@color/verdeClaro"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/divider5"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/nameItem2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:tint="@color/DarkBlue"
        app:layout_constraintBottom_toBottomOf="@+id/QtdItem3"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/QtdItem3"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_shopping_bag_24" />

    <TextView
        android:id="@+id/QtdItem3"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:fontFamily="@font/advent_pro_light"
        android:gravity="center"
        android:text="1000 Kg"
        android:textColor="@color/Azul_mais_claro"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView71"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView71" />

    <TextView
        android:id="@+id/textView71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro_bold"
        android:text="TextView"
        android:textColor="@color/Azul_mais_claro"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/TextViewValueOfEconomicOperation"
        app:layout_constraintTop_toBottomOf="@+id/TextViewValueOfEconomicOperation" />

    <TextView
        android:id="@+id/textView72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro_bold"
        android:text="TextView"
        android:textColor="@color/Azul_mais_claro"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/QtdItem3"
        app:layout_constraintTop_toBottomOf="@+id/QtdItem3" />

    <View
        android:id="@+id/divider5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/Azul_mais_claro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView72" />

</androidx.constraintlayout.widget.ConstraintLayout>