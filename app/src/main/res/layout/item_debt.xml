<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">


    <TextView
        android:id="@+id/textViewValueFromDebts"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/DarkBlue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewDescriptionDebts"
        app:layout_constraintStart_toStartOf="@+id/textViewDescriptionDebts"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionDebts" />

    <TextView
        android:id="@+id/textViewDescriptionDebts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/DarkBlue"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider8"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@+id/textViewDescriptionDebts"
        app:layout_constraintStart_toStartOf="@+id/textViewDescriptionDebts"
        app:layout_constraintTop_toTopOf="@+id/textViewDescriptionDebts" />

    <TextView
        android:id="@+id/textViewFrequencyDebts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:text="text"
        android:textColor="@color/DarkBlue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewValueFromDebts"
        app:layout_constraintTop_toBottomOf="@+id/textViewValueFromDebts" />

    <TextView
        android:id="@+id/textViewDebtsItemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:text="TextView"
        android:textColor="@color/DarkBlue"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewValueFromDebts"
        app:layout_constraintTop_toBottomOf="@+id/textViewValueFromDebts" />

</androidx.constraintlayout.widget.ConstraintLayout>