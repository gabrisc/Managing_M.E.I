<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.main.ui.ecmei.config.productQuantity.ProductConfigActivity">

    <View
        android:id="@+id/view4"
        android:layout_width="412dp"
        android:layout_height="104dp"
        android:background="@color/IntermediateDMBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="373dp"
        android:layout_height="38dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Unidade de medida para o que será salvo como produto ou serviço?"
        android:textColor="@color/IntermediateDMBlue"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupForProductConfig"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNewTypeForProductConfig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e tois" />

    </com.google.android.material.chip.ChipGroup>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSaveProductConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="Salvar"
        app:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCancelProductConfiig"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="Cancelar"
        android:textColor="#FF0000"
        app:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="serif"
        android:text="Unidades de medida"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro"
        android:gravity="center"
        android:text="Unidades de Medida Cadastradas"
        app:layout_constraintBottom_toTopOf="@+id/chipGroupForProductConfig"
        app:layout_constraintEnd_toEndOf="@+id/chipGroupForProductConfig"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/chipGroupForProductConfig" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextNewTypeForProductConfig"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="52dp"
        android:elevation="5dp"
        android:hint="Nome"
        app:layout_constraintBottom_toTopOf="@+id/buttonCancelProductConfiig"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonAddNewType"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/chipGroupForProductConfig">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/advent_pro_bold"
        android:text="EXEMPLO : UND, LITROS , KG, ETC."
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextNewTypeForProductConfig"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextNewTypeForProductConfig"
        app:layout_constraintTop_toBottomOf="@+id/editTextNewTypeForProductConfig" />

    <ImageButton
        android:id="@+id/imageButtonAddNewType"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/rouded_edit_text"
        android:elevation="5dp"
        android:tint="#051040"
        app:layout_constraintBottom_toBottomOf="@+id/editTextNewTypeForProductConfig"
        app:layout_constraintEnd_toEndOf="@+id/chipGroupForProductConfig"
        app:layout_constraintTop_toTopOf="@+id/editTextNewTypeForProductConfig"
        app:layout_constraintVertical_bias="0.562"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@color/IntermediateDMBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />
</androidx.constraintlayout.widget.ConstraintLayout>