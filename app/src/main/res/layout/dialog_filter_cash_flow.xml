<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/buttonFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/verdeClaro"
        android:text="Filtrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/spinnerDay"
        app:layout_constraintStart_toStartOf="@+id/spinnerDay"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDay" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="349dp"
        android:layout_height="28dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="FILTRO DO FLUXO DE CAIXA"
        android:textColor="@color/DarkBlue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider42"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/DarkBlue"
        app:layout_constraintEnd_toEndOf="@+id/textView41"
        app:layout_constraintStart_toStartOf="@+id/textView41"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />

    <Spinner
        android:id="@+id/spinnerYear"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="@+id/divider42"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/divider42"
        app:layout_constraintTop_toBottomOf="@+id/divider42" />

    <Spinner
        android:id="@+id/spinnerMonth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="@+id/spinnerYear"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/spinnerYear"
        app:layout_constraintTop_toBottomOf="@+id/spinnerYear" />

    <Spinner
        android:id="@+id/spinnerDay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/spinnerMonth"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinnerMonth"
        app:layout_constraintTop_toBottomOf="@+id/spinnerMonth" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:gravity="left"
        android:text="MÃŠS"
        android:textColor="@color/DarkBlue"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerMonth"
        app:layout_constraintEnd_toEndOf="@+id/spinnerMonth"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinnerMonth" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:gravity="left"
        android:text="ANO"
        android:textColor="@color/DarkBlue"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerYear"
        app:layout_constraintEnd_toEndOf="@+id/spinnerYear"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinnerYear" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:gravity="left"
        android:text="DIA"
        android:textColor="@color/DarkBlue"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerDay"
        app:layout_constraintEnd_toEndOf="@+id/spinnerDay"
        app:layout_constraintStart_toStartOf="@+id/spinnerDay" />

</androidx.constraintlayout.widget.ConstraintLayout>