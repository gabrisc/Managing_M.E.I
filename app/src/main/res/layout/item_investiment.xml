<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/textViewNameOfInvest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/IntermediateDMBlue"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewValueOfInvestiment"
        android:layout_width="104dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/IntermediateDMBlue"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewNameOfInvest"
        app:layout_constraintStart_toStartOf="@+id/textViewNameOfInvest"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameOfInvest" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="29dp"
        android:layout_height="27dp"
        android:layout_marginEnd="2dp"
        android:tint="@color/DarkBlue"
        app:layout_constraintBottom_toBottomOf="@+id/textViewValueOfInvestiment"
        app:layout_constraintEnd_toStartOf="@+id/textViewValueOfInvestiment"
        app:layout_constraintTop_toTopOf="@+id/textViewValueOfInvestiment"
        app:srcCompat="@drawable/ic_baseline_attach_money_24" />

    <View
        android:id="@+id/divider19"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/IntermediateDMBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewValueOfInvestiment" />

</androidx.constraintlayout.widget.ConstraintLayout>